<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/button"
        android:layout_width="353dp"
        android:layout_height="551dp"
        android:layout_marginStart="29dp"
        android:layout_marginLeft="29dp"
        android:layout_marginTop="128dp"
        android:layout_marginEnd="29dp"
        android:layout_marginRight="29dp"
        android:layout_marginBottom="52dp"
        android:alpha="0.2"
        android:background="@drawable/chuck1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bRefresh"
        android:layout_width="166dp"
        android:layout_height="47dp"
        android:layout_marginBottom="164dp"
        android:background="@drawable/button_background"
        android:text="Brighten me up fam."
        android:textColor="#FFD61A1A"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/button"
        app:layout_constraintEnd_toEndOf="@+id/button"
        app:layout_constraintStart_toStartOf="@+id/button"
        tools:shadowColor="#FFFFFF" />

    <TextView
        android:id="@+id/tvQuote"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="170dp"
        android:fontFamily="casual"
        android:gravity="center"
        android:text="Hey mate. Chuck here. Sick of programming? Click that box down there and I'll brighten up your day."

        android:textColor="#171414"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/bRefresh"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>